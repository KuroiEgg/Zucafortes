"VertexLitGeneric"
{
	"$basetexture" "freak_fortress_2/bootypyro/hwm/pyro_head_zombie_2"
	"$bumpmap" "freak_fortress_2/bootypyro/hwm/pyro_head_phongmask"

//	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
//	"$detailscale" "1"
//	"$detailblendfactor" .01
//	"$detailblendmode" 6

	"$phong" "1"
	"$phongexponenttexture" "freak_fortress_2/bootypyro/hwm/pyro_head_exponent"
	"$phongboost" "1"	
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$phongfresnelranges"	"[2 1 5]"
	"$halflambert" "1"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "4"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "2"	
	"$rimmask" "1"									// Boost for ambient cube component of rim lighting

	// Cloaking
	"$cloakPassEnabled" "1"
	"$cloakColorTint" "[1 0.5 0.4]"

	"Proxies"
	{
		"spy_invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1"  "$yellow"
			"resultVar" "$color2"
		}

	}
}
